<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/Relic_menu_header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00574B"
        android:gravity="center"
        android:text="Silent Unlockable"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/browser_actions_bg_grey"
        />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Start Unlock Level 1 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="7dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Lvl 1 Unlock"
                        android:background="@drawable/buttonbg"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <!-- Start 1st Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/bane"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bane"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 1st Item-->

                        <!-- Start 2nd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/catalyst"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Catalyst"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 2nd Item-->

                        <!-- Start 3rd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/silent_corpseexplosion"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Corpse Explosion"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 3rd Item-->

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- End Unlock Level 1 -->

            <!-- Start Unlock Level 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="7dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Lvl 2 Unlock"
                        android:background="@drawable/buttonbg"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <!-- Start 1st Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/relic_rare_duvudoll"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Du-Vu Doll"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 1st Item-->

                        <!-- Start 2nd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/relic_common_smilingmask"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Smiling Mask"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 2nd Item-->

                        <!-- Start 3rd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/relic_common_tinychest"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tiny Chest"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 3rd Item-->

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- End Unlock Level 2 -->

            <!-- Start Unlock Level 3 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="7dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Lvl 3 Unlock"
                        android:background="@drawable/buttonbg"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <!-- Start 1st Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/clockandagger"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cloak And Dagger"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 1st Item-->

                        <!-- Start 2nd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/accuracy"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Accuracy"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 2nd Item-->

                        <!-- Start 3rd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/stormofsteel"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Storm of Steel"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 3rd Item-->

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- End Unlock Level 3 -->

            <!-- Start Unlock Level 4 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="7dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Lvl 4 Unlock"
                        android:background="@drawable/buttonbg"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <!-- Start 1st Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/relic_common_artofwar"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Art of War"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 1st Item-->

                        <!-- Start 2nd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/relic_uncommon_thecourier"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="The Courier"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 2nd Item-->

                        <!-- Start 3rd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/relic_boss_pandoraboz"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pandora's Box"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 3rd Item-->

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- End Unlock Level 4 -->

            <!-- Start Unlock Level 5 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="7dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Lvl 5 Unlock"
                        android:background="@drawable/buttonbg"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <!-- Start 1st Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/concentrate"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Concentrate"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 1st Item-->

                        <!-- Start 2nd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/setup"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Setup"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 2nd Item-->

                        <!-- Start 3rd Item-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/silent_grandfinale"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Grand Finale"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        <!-- End 3rd Item-->

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- End Unlock Level 5 -->

        </LinearLayout>

    </ScrollView>

</LinearLayout>

